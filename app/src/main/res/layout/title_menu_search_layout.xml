<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_pop_bg">

    <RelativeLayout
        android:layout_width="333dp"
        android:layout_height="343dp"
        android:background="@drawable/search_pop_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/hosR_id_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/hosR_id_et"
                    android:layout_width="285dp"
                    android:layout_height="54dp"
                    android:paddingLeft="105dp"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病 历 号："
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/d_name_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginTop="74dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/hosR_id_search">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/d_name_et"
                    android:layout_width="285dp"
                    android:layout_height="54dp"
                    android:paddingLeft="105dp"
                    android:background="@null"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主治医生："
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginTop="74dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/d_name_search">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/d_keshi_et"
                    android:layout_width="285dp"
                    android:layout_height="54dp"
                    android:paddingLeft="105dp"
                    android:background="@null"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科    室："
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/search_btn"
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:text="查询"
                android:background="@drawable/search_btn_bg_selector"/>

            <Button
                android:id="@+id/clean_btn"
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:text="清空"
                android:layout_marginLeft="40dp"
                android:background="@drawable/search_btn_bg_selector"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>