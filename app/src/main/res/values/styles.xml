<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Starting app theme-->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_launcher</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--弹出窗style-->
    <style name="pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_title_in</item>
        <item name="android:windowExitAnimation">@anim/popup_title_out</item>
    </style>

    <!--登录EditText-->
    <style name="Hospital_et" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/btn_normal</item>
    </style>

</resources>
